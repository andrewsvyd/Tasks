<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/controlsDark</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="CredentialEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingStart">@dimen/spacing_simple</item>
        <item name="android:paddingEnd">@dimen/spacing_simple</item>
        <item name="android:paddingBottom">@dimen/credential_padding</item>
        <item name="android:paddingTop">@dimen/credential_padding</item>
        <item name="android:drawablePadding">@dimen/spacing_simple</item>
        <item name="background">@drawable/shape_credential_background</item>
        <item name="android:layout_marginStart">@dimen/spacing_huge</item>
        <item name="android:layout_marginEnd">@dimen/spacing_huge</item>

    </style>

    <style name="ToolbarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/controlsDark</item>
    </style>

    <style name="ToolbarDefault">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
